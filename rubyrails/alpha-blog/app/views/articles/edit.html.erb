<h1>This is the form to edit new articles</h1>

<% if @article.errors.any? %>
<% byebug %>
  <ul>  
    <% @article.errors.messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @article do |f| %>
  <p>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.submit %>
  </p> 

<% end %>
<% if @article.errors.any? %>
  <ul>  
    <% @article.errors.messages.each do |msgm| %>
      <li><%= msgm %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @article do |f| %>
  <p>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.submit %>
  </p> 

<% end %>

